# Logging Service Environment Variables
LOKI_PORT=3100
LOKI_HTTP_LISTEN_PORT=3100
LOKI_GRPC_LISTEN_PORT=9095

# Storage Configuration
LOKI_STORAGE_TYPE=filesystem
LOKI_STORAGE_PATH=/loki
LOKI_CHUNKS_DIRECTORY=/loki/chunks
LOKI_RULES_DIRECTORY=/loki/rules
LOKI_INDEX_DIRECTORY=/loki/index

# Retention Configuration
LOKI_RETENTION_PERIOD=168h  # 7 days
LOKI_RETENTION_DELETE_ENABLED=true

# Authentication Configuration
LOKI_AUTH_ENABLED=false

# Query Configuration
LOKI_QUERY_TIMEOUT=300s
LOKI_QUERY_MAX_CONCURRENT=10

# Ingester Configuration
LOKI_INGESTER_MAX_TRANSFER_RETRIES=3
LOKI_INGESTER_CHUNK_IDLE_PERIOD=1h
LOKI_INGESTER_CHUNK_BLOCK_SIZE=262144
LOKI_INGESTER_CHUNK_TARGET_SIZE=1048576

# Limits Configuration
LOKI_INGESTION_RATE_MB=4
LOKI_INGESTION_BURST_SIZE_MB=6
LOKI_MAX_STREAMS_PER_USER=10000
LOKI_MAX_LINE_SIZE=256000

# Server Configuration
LOKI_LOG_LEVEL=info
LOKI_LOG_FORMAT=logfmt

# External URL (for integration with Grafana)
LOKI_EXTERNAL_URL=http://logging:3100
